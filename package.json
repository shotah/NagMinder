{
  "name": "nagminder",
  "version": "1.1.0",
  "description": "A playful on-page nag bar that tracks your social media time and nudges you to do better",
  "scripts": {
    "lint": "eslint . --ext .js --ignore-pattern node_modules --ignore-pattern build --ignore-pattern dist --ignore-pattern messages.js",
    "lint:fix": "npm run lint -- --fix",
    "test": "npm run lint && node test/validate.js",
    "validate": "node scripts/validate.js",
    "clean": "node scripts/clean.js",
    "build": "npm run clean && node scripts/build.js",
    "package": "npm run build && node scripts/package.js",
    "dev": "npm run build && echo \"Load unpacked: ./build/ in chrome://extensions/\"",
    "help": "node scripts/help.js",
    "screenshots": "npx playwright test screenshots",
    "screenshots:setup": "npx playwright install chromium"
  },
  "keywords": [
    "chrome-extension",
    "productivity",
    "social-media",
    "time-tracking"
  ],
  "author": "Christopher Blodgett",
  "license": "MIT",
  "type": "module",
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@playwright/test": "^1.40.0",
    "eslint": "^9.33.0",
    "prettier": "^3.6.2",
    "web-ext": "^8.9.0"
  }
}
