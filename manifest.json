{
  "manifest_version": 3,
  "name": "NagMinder",
  "description": "A productivity tool that tracks time spent on social media sites and provides gentle reminders to help you stay focused.",
  "version": "1.1.0",
  "permissions": ["storage", "tabs", "idle"],
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "options.html",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.facebook.com/*",
        "*://*.x.com/*",
        "*://*.twitter.com/*",
        "*://*.linkedin.com/*",
        "*://*.instagram.com/*",
        "*://*.reddit.com/*",
        "*://*.tiktok.com/*",
        "*://*.youtube.com/*",
        "*://*.pinterest.com/*",
        "*://*.snapchat.com/*",
        "*://*.strava.com/*"
      ],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_title": "NagMinder"
  }
}
